{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ES5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "*": ["./src/*", "./config/*"],
        },
        "allowSyntheticDefaultImports": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS",
        }
    },
    "include": [
        "./config/**/*.ts",
        "./src/**/*.ts",
        "./src/**/*.tsx",
    ]    
}